{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenGLBuildArm64",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-Wall",
                //"-g",//debug mode
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/InternalLibs/*.cpp",
                "${workspaceFolder}/Class/*.cpp",
                "-I${workspaceFolder}/ExternalLibs/GLM",
                "-I${workspaceFolder}/ExternalLibs/GLEW/include",
                "${workspaceFolder}/ExternalLibs/GLEW/lib-arm64/libGLEW.2.2.0.dylib",
                "-I${workspaceFolder}/ExternalLibs/GLFW/include",
                "${workspaceFolder}/ExternalLibs/GLFW/lib-arm64/libglfw.3.dylib",
                "/usr/local/lib/libglfw.3.dylib",
                "-o",
                "${workspaceFolder}/main",
                "-framework",
                "OpenGL",
                "-framework",
                "Cocoa",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "CoreFoundation",
                "-Wno-deprecated"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",

        },

        {
            "label": "OpenGLBuildx86_64",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-Wall",
                //"-g",//debug mode
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/InternalLibs/*.cpp",
                "${workspaceFolder}/Class/*.cpp",
                "-I${workspaceFolder}/ExternalLibs/GLM",
                "-I${workspaceFolder}/ExternalLibs/GLEW/include",
                "${workspaceFolder}/ExternalLibs/GLEW/lib-x86_64/libGLEW.2.2.0.dylib",
                "-I${workspaceFolder}/ExternalLibs/GLFW/include",
                "${workspaceFolder}/ExternalLibs/GLFW/lib-x86_64/libglfw.3.dylib",
                "/usr/local/lib/libglfw.3.dylib",
                "-o",
                "${workspaceFolder}/main",
                "-framework",
                "OpenGL",
                "-framework",
                "Cocoa",
                "-framework",
                "IOKit",
                "-framework",
                "CoreVideo",
                "-framework",
                "CoreFoundation",
                "-Wno-deprecated"

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",

        }
    ]
}